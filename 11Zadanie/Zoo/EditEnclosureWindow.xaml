<Window x:Class="Zoo.EditEnclosureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Enclosure" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Edit Enclosure" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Number:" Width="100"/>
                <TextBox x:Name="NumberTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Size:" Width="100"/>
                <TextBox x:Name="SizeTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Max Animals:" Width="100"/>
                <TextBox x:Name="MaxAnimalsTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Width="100" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
